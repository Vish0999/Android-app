<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity10"
    android:background="@drawable/vvv1">

    <EditText
        android:id="@+id/ffname"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="71dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/baseline_person_24"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:paddingLeft="8dp"
        android:paddingTop="1dp"
        android:textColorHint="@color/white"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView7" />

    <EditText
        android:id="@+id/cccdno"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="71dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/baseline_confirmation_number_24"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Card Number"
        android:inputType="textPersonName"
        android:paddingLeft="8dp"
        android:paddingTop="1dp"
        android:textColor="@color/white"
        android:textColorHighlight="@color/white"
        android:textColorHint="@color/white"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName9" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="181dp"
        android:layout_height="32dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="171dp"
        android:background="@color/black"
        android:paddingLeft="8dp"
        android:paddingTop="1dp"
        android:text="Expiry Date"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amt" />

    <Spinner
        android:id="@+id/spin1"
        android:layout_width="103dp"
        android:layout_height="48dp"
        android:layout_marginStart="137dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="9dp"
        android:background="@drawable/input_bg"
        android:contentDescription="months"
        android:paddingLeft="8dp"
        android:paddingTop="1dp"
        app:layout_constraintEnd_toStartOf="@+id/spin2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView28" />

    <Spinner
        android:id="@+id/spin2"
        android:layout_width="112dp"
        android:layout_height="48dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/input_bg"
        android:contentDescription="yearr"
        android:paddingLeft="8dp"
        android:paddingTop="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/spin1"
        app:layout_constraintTop_toBottomOf="@+id/amt" />

    <EditText
        android:id="@+id/editTextTextPersonName9"
        android:layout_width="108dp"
        android:layout_height="48dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="244dp"
        android:background="@drawable/input_bg"
        android:ems="10"
        android:hint="CVV"
        android:inputType="textPersonName"
        android:paddingLeft="8dp"
        android:paddingTop="1dp"
        android:textColorHint="@color/white"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ffname" />

    <Button
        android:id="@+id/confirm"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="75dp"
        android:background="@color/white"
        android:paddingLeft="8dp"
        android:paddingTop="1dp"
        android:text="Confirm Payment"
        android:textColor="@color/black"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spin1" />

    <EditText
        android:id="@+id/amt"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/input_bg"
        android:ems="10"
        android:hint="Amount"
        android:inputType="textPersonName"
        android:paddingLeft="8dp"
        android:paddingTop="1dp"
        android:textColorHint="@color/white"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cccdno" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView7"
        android:layout_width="275dp"
        android:layout_height="189dp"
        android:layout_marginStart="66dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="70dp"
        android:elevation="70dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="254dp"
                android:layout_height="145dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/payment" />

            <TextView
                android:id="@+id/text09"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_marginTop="1dp"


                android:background="@color/black"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="10dp"


                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="please before click on PAYMENT button, please check all the details then click on PAYMENT button ."
                android:textColor="@color/white"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView8" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>